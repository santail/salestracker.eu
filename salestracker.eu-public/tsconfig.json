{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./build",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true
    },
    "include": [
        "./client/src//**/*.ts",
        "./client/tests//**/*.ts",
        "./server/src//**/*.ts",
        "./server/tests//**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }